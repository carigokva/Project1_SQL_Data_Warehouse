-- Script for loading raw loc_a101.csv into the table above
-- Running this script will truncate existing contents of the above table, then loads current data from the 
-- file specified in the directory

TRUNCATE TABLE bronze.erp_loc_a101;

COPY bronze.erp_loc_a101
FROM 'C://Users//Acer Predator Helios//Desktop//CYBER//DATA ANALYTICS//Portfolio//Data Warehousing to PBI analysis//datasets//source_erp//loc_a101.csv'
DELIMITER ','
CSV HEADER;

