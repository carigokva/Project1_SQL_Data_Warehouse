-- Scripts for loading erp data into tables under bronze layer

-- Table name: bronze.erp_cust_az12
-- Script for loading raw cust_az12.csv into the table above
-- Running this script will truncate existing contents of the above table, then loads current data from the 
-- file specified in the directory

TRUNCATE TABLE bronze.erp_cust_az12;

COPY bronze.erp_cust_az12
FROM 'C://Users//datasets//source_erp//cust_az12.csv' -- replace with actual full path of the file
DELIMITER ','
CSV HEADER;

-- ========================================================================================================================

